<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E3D5FB">

    <TextView
        android:id="@+id/textView1ex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Muscle Group"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/textView1ex"
        android:paddingStart="10dp"
        android:paddingEnd="10dp" >


        <TextView
            android:id="@+id/textView5ex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Bench Press"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2ex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="76dp"
            android:text="Description: Description goes here."
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView3ex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="284dp"
            android:text="Sets: # sets"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView4ex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Reps: # reps"
            android:textSize="20sp"/>

        <ImageView
                android:id="@+id/imageView1ex"
                android:layout_width="289dp"
                android:layout_height="159dp"
                android:layout_marginTop="32dp"
                android:layout_gravity="center"
                app:srcCompat="@android:drawable/presence_video_busy" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/button1ex"
                android:layout_width="130dp"
                android:layout_height="55dp"
                android:layout_marginTop="64dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:text="Generate" />

            <Button
                android:id="@+id/button2ex"
                android:layout_width="130dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginTop="64dp"
                android:text="Done" />

        </LinearLayout>



    </LinearLayout>




</RelativeLayout>
